# =============================================================================
# ENVIRONMENT CONFIGURATION SAMPLE
# =============================================================================
# Copy this file to .env.local and update the values as needed for your environment
# Never commit actual credentials to version control

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
REACT_APP_SITE_NAME="My Career NJ"
REACT_APP_API_URL=http://localhost:8080
REACT_APP_SITE_URL=http://localhost:3000

# =============================================================================
# CONTENTFUL CMS CONFIGURATION
# =============================================================================
# Contentful is used for content management
REACT_APP_BASE_URL=graphql.contentful.com/content/v1/spaces
REACT_APP_SPACE_ID=your_contentful_space_id
REACT_APP_ENVIRONMENT=master
REACT_APP_DELIVERY_API=your_contentful_delivery_api_key
REACT_APP_PREVIEW_API=your_contentful_preview_api_key

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Control which features are enabled/disabled in the application
# All feature flags default to false if not specified

# Enable/disable career pathways feature
REACT_APP_FEATURE_CAREER_PATHWAYS=true

# Enable/disable multilingual support
REACT_APP_FEATURE_MULTILANG=true

# Enable/disable Pinpoint integration
REACT_APP_FEATURE_PINPOINT=false

# Enable/disable career navigator feature
REACT_APP_FEATURE_CAREER_NAVIGATOR=true

# Enable/disable career row feature on landing page
REACT_APP_FEATURE_LP_CAREER_ROW=false

# Enable/disable maintenance mode
REACT_APP_FEATURE_MAINTENANCE=false

# Enable/disable beta version features
REACT_APP_FEATURE_BETA=false
REACT_APP_FEATURE_BETA_MESSAGE="This is a beta version of the site. Please report any issues to the NJDOL team."

# Enable/disable Pinpoint segments display
REACT_APP_FEATURE_SHOW_PINPOINT_SEGMENTS=false

# Enable/disable Consumer Report Card info drawer
# When enabled, shows "Learn more about the consumer report card" link and drawer
NEXT_PUBLIC_FEATURE_CRC_INFO=false

# =============================================================================
# O*NET INTEGRATION
# =============================================================================
# O*NET Web Services for occupational data
ONET_BASEURL=https://services.onetcenter.org/
ONET_USERNAME=your_onet_username
ONET_PASSWORD=your_onet_password

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Optional password for development environment access
DEV_PASS=

# Public URL for static site generation
PUBLIC_URL=

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# SMTP settings for contact forms and notifications
EMAIL_SOURCE=your_source_email@example.com
CONTACT_RECEIVER_EMAIL=your_receiver_email@example.com
SMTP_HOST=your_smtp_host
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password

# =============================================================================
# GOOGLE SERVICES
# =============================================================================
# Google OAuth and API configuration
REACT_APP_GOOGLE_CLIENTID=your_google_client_id
REACT_APP_GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REFRESH_TOKEN=your_google_refresh_token

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Credential Engine authentication
CE_AUTH_TOKEN=your_credential_engine_token
CE_ENVIRONMENT=sandbox

# Survey integration
NEXT_PUBLIC_SURVEY_URL=https://www.surveymonkey.com/r/your_survey_id

# Newsletter signup feature
REACT_APP_SIGNUP_FOR_UPDATES=true